<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, public_items_path(genre_id: genre.id) %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>

<% if @genre.present?  %>
  <%= render 'genre_index', items:@items  %>
<% else %>
  <%= render 'all_index', items:@items  %>
<% end %>