<div class="col-md-8">
    <h1>全商品一覧ページ</h1>
    <h3>（全<%= @items_for_index.count %>件）</h3>

    <% @items.each do |item| %>
    <div class="d-md-inline-block  card text-center">
        <div class="card-body center">
            <%= attachment_image_tag item, :image, format: 'jpeg', size:"150x100", fallback: "no_image.jpg" %>
            <%= link_to public_item_path(item.id) do %>
                <h6 class="card-title"><%= item.name %></h6>
            <% end %>
           <p class="card-text"><%= item.price %></p>
        </div>
        <% end %>
    </div>
</div>

<div class="col-md-12 mt-3  text-right"><%= paginate items %></div>