<h2>注文情報確認</h2>
<table class="table table-bordered col-md-9 offset-md-1">
  <thead>
    <tr>
      <th class="table-active"  style="width:430px;">商品名</th>
      <th class="table-active">単価（税込）</th>
      <th class="table-active" style="width:170px;">数量</th>
      <th class="table-active" style="width:150px;">小計</th>

    </tr>
  </thead>
  <tbody>
    <% @subtotal = 0 %>
    <% @total = 0 %>
<% @cart_items.each do |cart_item| %>
<tr>
  <td><%= attachment_image_tag(cart_item.item, :image, size: "50x40", fallback: "no_image.jpg") %>
      <%= cart_item.item.name %></td>
  <td><%= cart_item.item.price %></td>
<td><%= cart_item.amount %></td>

  <td><%= @subtotal = cart_item.item.price * cart_item.amount %></td>
  <% @total += @subtotal %>
</tr>
<% end %>
  </tbody>
</table>


<table class="table table-bordered col-md-9 offset-md-1">
  <tbody>
    <tr>
      <th class="table-active"  style="width:430px;">送料</th>
      <td>800</td>
          </tr>
    <tr>
      <th class="table-active"  style="width:430px;">商品合計</th>
      <td><%= @total %></td>
          </tr>
    <tr>
      <th class="table-active"  style="width:430px;">商品合計</th>
      <td><%= @totalpay = @total + 800 %></td>
          </tr>
      </tbody>
</table>

<h3>支払方法</h3>
<p><%= @order.payment_method %></p>
<h3>お届け先</h3>
<p> <%= "#{@order.postal_code} #{@order.address} 　#{@order.name}" %></p>


<%= form_with model:@order, url: orders_path,method: :post, local:true do |f| %>
<%= f.hidden_field :postal_code, value: @order.postal_code %>
<%= f.hidden_field :address, value: @order.address %>
<%= f.hidden_field :name, value: @order.name %>
<%= f.hidden_field :shipping_cost, value: 800 %>
<%= f.hidden_field :total_payment, value: @totalpay %>
<%= f.hidden_field :payment_method, value: @order.payment_method %>
<% if params[:order][:shipping_address] == "2" %>
<%= f.hidden_field :shipping_address, value: params[:order][:shipping_address] %>
<% end %>
<%= f.submit '注文を確定する' %>
<% end %>