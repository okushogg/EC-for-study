<div class="container">
  <div class="row mt-6">
    
    <h2 class="col-md-12 text-center">注文情報入力ページ</h2>
    <div class="col-md-12">
     <%= form_with model:@order, url: confirm_orders_path,method: :get, local:true do |f| %>
    </div>
    <div class="col-md-12 mt-3">
              <!--支払方法-->
              <h3 class="mt-3">支払い方法</h3>
              <%= f.radio_button :payment_method, '0', checked: true, class:"mt-3" %>
              <%= f.label :payment_method, 'クレジットカード', value: 0 %><br>
              <%= f.radio_button :payment_method, '1' %>
              <%= f.label :payment_method, '銀行振込', value: 1 %>
    </div>
        <!--注文時の納品住所,注文時の郵便番号,注文時の納品先氏名-->
        
          <h3 class="col-md-12 mt-5">お届け先</h3>
          <div class="col-md-6 mt-3">
            <h5>
              <%= f.radio_button :shipping_address, '0', checked: true  %>
              <%= f.label :shipping_address, 'ご自身の住所', value: 0 %>
            </h5>
            <h6>
              <%= "#{current_customer.postal_code}  #{current_customer.address}" %><br>
              <%= "#{current_customer.last_name} #{current_customer.first_name}" %><br>
            </h6>
          </div>
          
          <div class="col-md-6 mt-3">
              <h5>
                <%= f.radio_button :shipping_address, '2' %>
                <%= f.label :shipping_address, '新しいお届け先', value: 2 %>
              </h5>
                <label>郵便番号(ハイフンなし)</label>
                <%= f.text_field :new_postal_code,  {class:"form-group mt-1 ml-1"} %>
                <br>
                <label>住所</label>
                <%= f.text_field :new_address, {class:"form-group  ml-1 col-md-7"}%>
                <br>
                <label>宛名</label>
                <%= f.text_field :new_name, {class:"form-group  ml-1"} %><br>
          </div>
            
            
            <div class="col-md-12 mt-5">
            <h5>
              <%= f.radio_button :shipping_address, '1' %>
              <%= f.label :shipping_address, '登録先住所から選択', value: 1 %>
            </h5>
              <%= f.collection_select(:address_id, @addresses, :id, :view_for_shipping_address) %>
              <br>
              
           </div>
           
           <div class="col-md-12 mt-10">
            <%= f.submit '確認画面へ進む', {class:"btn btn-success mt-5"} %>
           </div>
      <% end %>
    </div>
  </div>
</div>