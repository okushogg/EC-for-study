<h1>注文情報入力ページ</h1>
<%= form_with model:@order, url: confirm_public_orders_path,method: :get, local:true do |f| %>


<!--支払方法-->
<p>支払い方法</p>
<%= f.radio_button :payment_method, '0' %>
<%= f.label :payment_method, 'クレジットカード', value: 0 %><br>
<%= f.radio_button :payment_method, '1' %>
<%= f.label :payment_method, '銀行振込', value: 1 %>


<!--注文時の納品住所,注文時の郵便番号,注文時の納品先氏名-->
<p>お届け先</p>
<%= f.radio_button :shipping_address, '0'  %>
<%= f.label :shipping_address, 'ご自身の住所', value: 0 %><br>
<%= "#{current_customer.postal_code}  #{current_customer.address}" %><br>
<%= "#{current_customer.last_name} #{current_customer.first_name}" %>
<br>

<%= f.radio_button :shipping_address, '1' %>
<%= f.label :shipping_address, '登録先住所から選択', value: 1 %><br>
<%= f.collection_select(:address_id, @addresses, :id, :view_for_shipping_address) %>
<br>


<%= f.radio_button :shipping_address, '2' %>
<%= f.label :shipping_address, '新しいお届け先', value: 2 %><br>
<label>郵便番号(ハイフンなし)</label>
<br>
<%= f.text_field :new_postal_code %>
<br>
<label>住所</label>
<%= f.text_field :new_address %>
<br>
<label>宛名</label>
<%= f.text_field :new_name %>

<br>
<%= f.submit '確認画面へ進む' %>
<% end %>