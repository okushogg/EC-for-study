<h1>注文情報入力ページ</h1>
<%= form_with model:@order, url: new_public_order_path, method: :post, local:true do |f| %>
<!--会員ID-->
<%= f.hidden_field :customer_id, value: current_customer.id %>
<!--送料-->
<%= f.hidden_field :shipping_cost, value: 800 %>
<!--請求額-->
<%#= f.hidden_field :total_payment, value:@total += shipping_cost  %>
<!--注文ステータス-->
<%= f.hidden_field :status, value: 0 %>
<!--支払方法-->
<p>支払い方法</p>
<%= f.radio_button :payment_method, '1' %>
<%= f.label :payment_method, 'クレジットカード', value: 1 %><br>
<%= f.radio_button :payment_method, '0' %>
<%= f.label :payment_method, '銀行振込', value: 0 %>


<!--注文時の納品住所,注文時の郵便番号,注文時の納品先氏名-->
<p>お届け先</p>
<%= f.radio_button :postal_code, :address %>
<%= f.label :payment_method, 'ご自身の住所', value: 1 %><br>
<%= "#{current_customer.postal_code}  #{current_customer.address}" %><br>
<%= "#{current_customer.last_name} #{current_customer.first_name}" %>
<br>

<%= f.radio_button :postal_code, :address %>
<%= f.label :payment_method, '登録先住所から選択', value: 1 %><br>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<br>


<%= f.radio_button :postal_code, :address %>
<%= f.label :payment_method, '新しいお届け先', value: 1 %><br>
<label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %>
  <br>
  <label>住所</label>
  <%= f.text_field :address %>
  <br>
  <label>宛名</label>
  <%= f.text_field :name %>
  
<br>
<%= f.submit '確認画面へ進む' %>
<% end %>