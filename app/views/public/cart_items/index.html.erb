<h4 style="margin:40px 150px;"><span class="alert-dark pl-3 pr-3">ショッピングカート</span>
  <span style="margin-left:640px;"><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger" %></span></h4>
<table class="table table-bordered col-md-9 offset-md-1">
  <thead>
    <tr>
      <th class="table-active"  style="width:430px;">商品名</th>
      <th class="table-active">単価（税込）</th>
      <th class="table-active" style="width:170px;">数量</th>
      <th class="table-active" style="width:150px;">小計</th>
      <th class="table-active"></th>
    </tr>
  </thead>
  <tbody>
    <% @subtotal = 0 %>
    <% @total = 0 %>
<% @cart_items.each do |cart_item| %>
<tr>
  <td><%= attachment_image_tag(cart_item.item, :image, size: "50x40", fallback: "no_image.jpg") %>
      <%= cart_item.item.name %></td>
  <td><%= cart_item.item.price %></td>
<td>
  <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
    <%= f.number_field :amount, min:1, max:10 %>
    <span class="ml-4"><%= f.submit "変更", class:"btn btn-primary active" %></span>
  <% end %></td>

  <td><%= @subtotal = cart_item.item.price * cart_item.amount %></td>
  <% @total += @subtotal %>
  <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger pl-3 pr-3 ml-4" %></td>
</tr>
<% end %>
  </tbody>
</table>

<table class="table table-bordered col-md-2" style="margin-left:955px;">
  <thead>
    <th class="table-active" style="width:100px;">合計金額</th>
    <th><%= @total %></th>
  </thead>
</table>
