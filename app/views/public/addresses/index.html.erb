<h3>配送先登録/一覧</h3>

<%= form_with model:@address, url: addresses_path, local:true do |f| %>
  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %>
  <br>
  <label>住所</label>
  <%= f.text_field :address %>
  <br>
  <label>宛名</label>
  <%= f.text_field :name %>
  <%= f.submit '登録する' %>
<% end %>


<table class="">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th col-span="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |add| %>
    <tr>
      <td><%= add.postal_code %></td>
      <td><%= add.address %></td>
      <td><%= add.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(add.id) %>
        <%= link_to "削除する", address_path(add.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>