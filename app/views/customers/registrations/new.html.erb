<h4 style="margin:40px 150px;"><span class="alert-dark pl-3 pr-3">新規会員登録</span></h4>
<div style="margin-left:100px;" class="col-md-8">
  <!--12/14種坂　下記form_withへ書き換えが必要-->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :last_name, "名前" %><span style="margin:0  14px 0 167px;">(性)</span>
      <%= f.text_field :last_name, autofocus: true, :size => "23*23" %>
      <!--%= f.label :first_name, "名前"%>-->
      <span style="margin-right:30px;"></span>(名)<span style="margin-right:23px;"></span><%= f.text_field :first_name, autofocus: true, :size => "23*23"  %>
    </div>

    <div class="field">
      <%= f.label :last_name_kana, "フリガナ" %><span style="margin-left:133px;">(メイ)</span>
      <%= f.text_field :last_name_kana, autofocus: true, :size => "23*23"  %>
      <!--%= f.label :first_name_kana, "フリガナ　（メイ）" %>-->
      <span style="margin-right:30px;"></span>(メイ)<span style="margin-right:7px;"></span><%= f.text_field :first_name_kana, autofocus: true, :size => "23*23"  %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><span style="margin-left:131px;"></span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "23*23"  %>
    </div>

    <div class="field">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><span style="margin-left:49px;"></span>
      <%= f.text_field :postal_code, autofocus: true, :size => "23*23"  %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %><span style="margin-left:208px;"></span>
      <%= f.text_field :address, autofocus: true, :size => "59*58" %>
    </div>

    <div class="field">
      <%= f.label :telephone_number, "電話番号（ハイフンなし）" %><span style="margin-left:48px;"></span>
      <%= f.text_field :telephone_number, autofocus: true, :size => "23*23"  %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><span style="margin-left:67px;"></span>
      <%= f.password_field :password, autocomplete: "new-password", :size => "23*23"  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %><span style="margin-left:80px;"></span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "23*23"  %>
    </div>

    <div class="actions">
      <span style="margin-left:350px;"></span><%= f.submit "新規登録", class:"btn btn-success pl-5 pr-5 mt-3" %>
    </div>
  <% end %>
</div>
    <h5><span class="alert-dark pl-3 pr-3" style="margin-left:140px;">既に登録お済みの方</span></h5>
    <p style="margin-left:200px;" class="mt-3"><%= link_to "こちら", new_customer_session_path %><span>  からログインしてください。</span></p>

