<h3 class="title"><span class="alert-dark pl-3 pr-3">商品新規登録</span></h3>
<div class="container">
    <div class="row">
        <%= form_with model:@item, url: admins_items_path, method: :new, local:true do |f| %>
            <div class="image col-md-4">
                <%= f.attachment_field :image %>
            </div>

            <div class="col-md-8">
                <p>商品名</p>
                <%= f.text_field :name %>
                <p>商品説明</p>
                <%= f.text_area :introduction %>
                <p>ジャンル</p>
                <%= f.collection_select :genre_id, Genre.all, :id, :name  %>
                <p>税抜価格</p>
                <%= f.number_field :price %>
                <p>販売ステータス</p>
                <%= f.select :is_active, [['販売中',0],['販売停止',1]],{ include_blank: true, selected: 0 } %>
            </div>
            <div>
                <%= f.submit '新規登録', class:"btn btn-secondary" %>
            </div>
        <% end %>
    </div>
</div>