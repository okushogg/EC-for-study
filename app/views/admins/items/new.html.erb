<h3 class="title"><span class="alert-dark pl-3 pr-3">商品新規登録</span></h3>
<div class="container">
    <div class="row">

            <div class="image col-lg-4">
                <%= form_with model:@item, url: admins_items_path, method: :new, local:true do |f| %>
                <%= f.attachment_field :image %>
            </div>

            <div class="col-lg-8">
                <p>商品名<%= f.text_field :name %></p>
                <div style="display: inline-block;">商品説明</div><div style="display:inline-block; vertical-align: top;"><%= f.text_area :introduction %></div>
                <p>ジャンル<span style="margin-right:10px;"></span><%= f.collection_select :genre_id, Genre.all, :id, :name  %></p>
                <p>税抜価格<%= f.number_field :price %></p>
                <p>販売ステータス<%= f.select :is_active, [['販売中',0],['販売停止',1]],{ include_blank: true, selected: 0 } %></p>
            </div>
                <%= f.submit '新規登録', class:"btn btn-secondary" %>
        <% end %>
    </div>
</div>