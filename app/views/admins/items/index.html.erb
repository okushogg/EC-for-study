<h1>商品一覧ページ</h1>
<table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th>商品ID</th>
    <th>商品名</th>    
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    </tr>
    </thead>
<tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admins_item_path(item.id) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><%= item.is_active ? '販売中':'販売中止' %></td>
    </tr>
  <% end %>
</tbody>
</table>

<%= link_to '新規商品作成', new_admins_item_path %>