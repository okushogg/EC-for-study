<h3 style="margin:45px 0 40px 200px;"><span class="alert-dark pl-3 pr-3">商品一覧</span></h3>
 <button class="Button-style" style="margin:0 0 10px 1270px;"><%= link_to"➕", new_admins_item_path %></button>
<div class="container col-md-10">
  <div class="row">
    <table class="table table-hover table-inverse">
        <thead>
          <tr class="table-active">
            <th>商品ID</th>
            <th style="width:300px;">商品名</th>
            <th>税抜価格</th>
            <th style="width:330px;">ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admins_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中止':'販売中' %></td>
        </tr>
      <% end %>
    </tbody>
    </table>

  </div>
</div>