<!--ジャンル新規投稿-->
<h1>商品ジャンル追加フォーム</h1>
<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
  <h4>商品ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.select :is_active ,[['有効',true],['無効',false]] %>
  <%= f.submit '追加' %>
<% end %>

<!--ジャンル一覧-->

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @genres.each do |genre| %>
<tr>
 <td><%= genre.name %></td>
  <td><%= genre.is_active ? '有効' : '無効' %></td>
  <td><p>編集ボタン予定</p></td>
  <td>
<%= link_to "削除（開発用）", admins_genre_path(genre), method: :delete %></td>
</tr>
<% end %>
  </tbody>
</table>
