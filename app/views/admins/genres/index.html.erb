<!--ジャンル新規投稿-->
<h3 style="margin:45px 170px;"><span class="alert-dark pl-3 pr-3">ジャンル一覧 / 追加</span></h3>
<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
  <h4>ジャンル
  <%= f.text_field :name %>
  <%= f.select :is_active ,[['有効',true],['無効',false]] %>
  <!--%= f.radio_button :is_active ,[['有効',true],['無効',false]] %>-->
  <!--%= f.radio_button :is_active ,[['有効',true],['無効',false]] %>-->
  <%= f.submit '追加', class:"btn btn-primary" %></h4>
<% end %>

<!--ジャンル一覧-->

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @genres.each do |genre| %>
<tr>
 <td><%= genre.name %></td>
  <td><%= genre.is_active ? '有効' : '無効' %></td>
  <td><%= link_to "編集", edit_admins_genre_path(genre) %></td>
  <td>
<%= link_to "削除（開発用）", admins_genre_path(genre), method: :delete %></td>
</tr>
<% end %>
  </tbody>
</table>
