<!--ジャンル新規投稿-->

<h3 style="margin:45px 0 70px 170px;"><span class="alert-dark pl-3 pr-3">ジャンル一覧 / 追加</span></h3>
<%= render "layouts/error_messages", resource: @genre %>
<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
  <h4 style="margin:0 0 70px 80px;">ジャンル<span style="margin-left:20px;"></span>
  <%= f.text_field :name %>
    <span style="margin-left:10px;"></span>
    <!--%= f.label :is_active, "", :value => "true"  %>-->
    <%= f.radio_button :is_active, true, :checked => true  %>  有効
    <span style="margin-left:15px;"></span>
    <!--%= f.label :is_active, "", :value => "false" %>無効-->
    <%= f.radio_button :is_active, false%>  無効

  <span style="margin-left:20px;"></span><%= f.submit '追加', class:"btn btn-primary" %></h4>
<% end %>

<!--ジャンル一覧-->

<table class="table col-md-5" style="margin-left:80px;">
  <thead>
    <tr class="table-active">
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @genres.each do |genre| %>
<tr>
 <td><%= genre.name %></td>
  <td><%= genre.is_active ? '有効' : '無効' %></td>
  <td style="width:150px;"><%= link_to "編集する", edit_admins_genre_path(genre), class:"btn btn-primary active pl-4 pr-4" %></td>
</tr>
<% end %>
  </tbody>
</table>


