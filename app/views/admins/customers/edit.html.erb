<h1><%="#{@customer.last_name} #{@customer.first_name}"%>さんの会員情報の編集</h1>

<table class="table table-hover table-inverse">
          
      <tbody>
          <%= form_with model:@customer, url: admins_customer_path(@customer.id), method: :patch, local:true do |f| %>
          <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
          </tr>
          
          <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
          </tr>
          
          <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
          </tr>
          
          <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
          </tr>
          
          <tr>
              <td>住所</td>
              <td><%= f.text_field :address %></td>
          </tr>
          
          <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
          </tr>
          
          <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
          </tr>
          
           <tr>
              <td>会員ステータス</td>
              <td></td>
          </tr>
          
          <tr><%= f.submit '変更を保存する', class:"btn btn-secondary" %></tr>
          <% end %>
      </tbody>
</table>